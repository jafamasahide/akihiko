{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@api/*": [
        "apps/api/src/*"
      ],
      "@akihiko/utils": [
        "libs/utils/src"
      ],
      "@akihiko/utils/*": [
        "libs/utils/src/*"
      ]
    }
  }
}
